# Backend
NODE_ENV=production
SERVER_PORT=3000
DATABASE_URL=file:/app/data/prod.db
BETTER_AUTH_SECRET=your-secret-here-min-32-characters
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001

# Frontend (build-time - baked into bundle at build)
# This is the PUBLIC URL that browsers use to reach the backend
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Frontend (runtime - used by SSR inside Docker)
# This is the INTERNAL Docker network URL for server-side fetch
API_INTERNAL_URL=http://backend:3000

# Frontend runtime port
PORT=3001
